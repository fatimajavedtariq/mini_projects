namespace Calculator
{
    public partial class Form1 : Form
    {
        public double number1;
        public string operation;
        public double number2;
        public double result;
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            
        }

        private void bin_Click(object sender, EventArgs e)
        {
            int number = int.Parse(textBox1.Text);
            string binNum = "";
            while(number > 0)
            {
                binNum = Convert.ToString(number % 2) + binNum;
                number = number / 2;
            }
            textBox1.Text = binNum;
        }

        private void oct_Click(object sender, EventArgs e)
        {
            int number = int.Parse(textBox1.Text);
            string octNum = "";
            while (number > 0)
            {
                octNum = Convert.ToString(number % 8) + octNum;
                number = number / 8;
            }
            textBox1.Text = octNum;
        }

        private void hex_Click(object sender, EventArgs e)
        {
            int number = int.Parse(textBox1.Text);
            string hexNum;
            hexNum = Convert.ToString(number, 16);
            textBox1.Text = hexNum;
        }

        private void M_Click(object sender, EventArgs e)
        {
            double memorynumber = double.Parse(textBox1.Text);
            textBox1.Text = "0";
        }

        private void dot_Click(object sender, EventArgs e)
        {
            if (!textBox1.Text.Contains('.'))
            {
                textBox1.Text += ".";
            }
        }

        private void c_Click(object sender, EventArgs e)
        {
            textBox1.Text = "";
            number1 = 0;
            number2 = 0;
            operation = "";
        }

        private void zero_Click(object sender, EventArgs e)
        {

            textBox1.Text += "0";
        }

        private void one_Click(object sender, EventArgs e)
        {
            textBox1.Text += "1";
        }

        private void two_Click(object sender, EventArgs e)
        {

            textBox1.Text += "2";
        }

        private void three_Click(object sender, EventArgs e)
        {

            textBox1.Text += "3";
        }

        private void four_Click(object sender, EventArgs e)
        {
            textBox1.Text += "4";
        }

        private void five_Click(object sender, EventArgs e)
        {
            textBox1.Text += "5";
        }

        private void six_Click(object sender, EventArgs e)
        {
            textBox1.Text += "6";
        }

        private void seven_Click(object sender, EventArgs e)
        {
            textBox1.Text += "7";
        }

        private void eight_Click(object sender, EventArgs e)
        {
            textBox1.Text += "8";
        }

        private void nine_Click(object sender, EventArgs e)
        {
            textBox1.Text += "9";
        }

        private void operationButton(object sender)
        {
            Button button = (Button)sender;
            operation = button.Text;
            number1 = double.Parse(textBox1.Text);
            textBox1.Text = "";
        }
        private void add_Click(object sender, EventArgs e)
        {
            operationButton(sender);
        }

        private void subtract_Click(object sender, EventArgs e)
        {
            operationButton(sender);
        }

        private void multiply_Click(object sender, EventArgs e)
        {
            operationButton(sender);
        }

        private void divide_Click(object sender, EventArgs e)
        {
            operationButton(sender);
        }

        private void equal_Click(object sender, EventArgs e)
        {
            number2 = double.Parse(textBox1.Text);
            switch (operation)
            {
                case "+":
                    result = number1 + number2;
                    break;
                case "-":
                    result = number1 - number2;
                    break;
                case "ร":
                    result = number1 * number2;
                    break;
                case " รท":
                    if (number2 != 0)
                        result = number1 / number2;
                    else
                        result = double.NaN;
                    break;

            }
            textBox1.Text = result.ToString();
            number1 = result;
            operation = "";
        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void backspace_Click(object sender, EventArgs e)
        {
            if(textBox1.Text.Length > 0)
            {
                textBox1.Text = textBox1.Text.Substring(0, textBox1.Text.Length - 1);
            }
        }
    }
}
